<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignInActivity">

    <ImageButton
        android:layout_margin="20dp"
        android:id="@+id/btn_sign_close"
        android:src="@drawable/icon_close"
        android:layout_alignParentEnd="true"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ImageButton>

    <LinearLayout
        android:id="@+id/sign_lay"
        android:layout_below="@+id/btn_sign_close"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Sign-In"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_marginTop="20dp"
            android:text="Take your data where ever you go."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <com.google.android.gms.common.SignInButton
            android:layout_marginTop="10dp"
            android:id="@+id/btn_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </com.google.android.gms.common.SignInButton>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            android:text="We don't collect or store any of your Presonal data."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:padding="20dp"
        android:visibility="gone"
        android:id="@+id/backup_lay"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/Sign_details"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/backup"
            android:background="#00000000"
            android:textColor="@color/colorAccent"
            android:text="BackUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>

        <TextView
            android:layout_margin="20dp"
            android:singleLine="false"
            android:text="To make a Back-up in cloud you need to watch AD of 30 or less then 30 seconds."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <Button
            android:layout_marginTop="50dp"
            android:id="@+id/logout"
            android:background="#00000000"
            android:text="Log out"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>

    </LinearLayout>

</RelativeLayout>